{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Gradio App",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "${workspaceFolder}/src/app.py"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "pytest",
        "-v"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Rebuild Vector Database",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "${workspaceFolder}/src/document_loader.py",
        "--rebuild"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Format Code (Ruff)",
      "type": "shell",
      "command": "ruff",
      "args": [
        "format",
        "${workspaceFolder}/src",
        "${workspaceFolder}/tests"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Lint Code (Ruff)",
      "type": "shell",
      "command": "ruff",
      "args": [
        "check",
        "${workspaceFolder}/src"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Type Check (mypy)",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": [
        "-m",
        "mypy",
        "${workspaceFolder}/src"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Install Dependencies (UV)",
      "type": "shell",
      "command": "uv",
      "args": [
        "pip",
        "install",
        "-r",
        "${workspaceFolder}/requirements.txt"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Sync Dependencies (UV)",
      "type": "shell",
      "command": "uv",
      "args": [
        "pip",
        "sync",
        "${workspaceFolder}/requirements.txt",
        "${workspaceFolder}/requirements-dev.txt"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
